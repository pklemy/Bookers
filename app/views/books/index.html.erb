
<div>
<!--https://html-coding.co.jp/annex/dictionary/html/tr/-->
<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <table>
   <tr>
   <th>Title</th>
   <th>Body</th>
   </tr>
<% @books.each do |book| %>
 <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to 'Show', book_path(book) %></td>
   <td><%= link_to 'Edit', edit_book_path(book) %></td>
   <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you ok？" %></td>
 </tr>
<% end %>
</table>
</div>

<h3>New book</h3>
<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

